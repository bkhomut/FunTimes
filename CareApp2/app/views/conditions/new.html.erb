<h1>New Condition</h1>


<%= form_tag(conditions_url, method: 'post') do %>


  <div>
    <%= label_tag :condition_id %><br />
    <%= number_field_tag :condition_id %>
  </div>

  <div>
    <%= label_tag :condition_name %><br />
    <%= text_field_tag :condition_name %>
  </div>

  <div>
    <%= label_tag :resource %><br />
    <%= text_field_tag :resource %>
  </div>


  <div>
    <%= submit_tag "Create Condition" %>
  </div>
<% end %>
