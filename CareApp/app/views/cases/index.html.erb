<h1>Cases</h1>

<p><%= link_to 'Add a New Case', new_case_url %></p>

<table>
  <thead>
    <tr>
      <th>Case</th>
      <th>User</th>
      <th>Condition</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @cases.each do |case| %>
    <tr>
      <td><%= case.case_id %></td>
      <td><%= case.user_id %></td>
      <td><%= case.condition_id %></td>
  
      <td><%= link_to 'Show', case_url(case) %></td>
      <td><%= link_to 'Edit', edit_case_url(case) %></td>
      <td><%= link_to 'Destroy', case_url(case), method: 'delete', data: { confirm: "Do you really want to delete this case?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

