
<h2>Your Engagement</h2>


<div><%= link_to 'Edit Engagement', "#{@engagement["id"]}/edit" %></div>

<p>
  <b>User</b>
  <%= @engagement.user_id %>
</p>

<p>
  <b>Condition:</b>
  <%= @engagement.condition_id %>
</p>

<br></br>

<h2>Permissions</h2>

<p><%= link_to 'Add a New Permission', new_permission_url %></p>

<table id = "wrapper" class="table table-striped">
  <thead>
    <tr>
      <th>Engagement</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
  <% @permissions.each do |permission| %>
    <tr>
      <td><%= permission.engagement_id %></td>
      <td><%= permission.user_id %></td>
  
      <td></td>
      <td></td>
      <td><%= link_to 'Destroy', permission_url(permission), method: 'delete', data: { confirm: "Do you really want to delete this permission?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

